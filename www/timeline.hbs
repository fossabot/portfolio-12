{{page "title" "Timeline"}}
{{page "description" "An overview of major events in my life"}}
{{page "keywords" "timeline,events,work,education,achievements,volunteer"}}

<!DOCTYPE html>
<html lang="{{site.lang}}">
  <head>
    {{> includes/metadata}}
  </head>
  <body>
    {{> includes/header compact=true}}

    <main class="main">
      <section id="timeline" class="section">
        <ol class="timeline timeline--alternate">
          {{#each timeline}}
            <li class="timeline-event timeline-event--{{ type }}">
              <p class="timeline-event__title short-underline">{{ title }}</p>
              <p><span class="text-italic">{{ when }}</span> | {{#each institutes}}{{ name }}{{#unless @last}}, {{/unless}}{{/each}}</p>
              <a class="timeline-event__more more-arrow" href="{{ link }}" rel="noopener">More</a>
            </li>
          {{/each}}
        </ol>
      </section>

      {{> includes/back-to-top}}
    </main>

    {{> includes/footer}}
  </body>
</html>
