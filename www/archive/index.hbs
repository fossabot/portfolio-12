{{page "title" "Archive"}}
{{page "description" "An overview of the projects I've worked on, and projects I've contributed to"}}
{{page "keywords" "portfolio,archive,contributions"}}

<!DOCTYPE html>
<html lang="{{site.lang}}">
  <head>
    {{> includes/metadata}}
    <link href="/styles/bundle.css" media="screen" rel="stylesheet" type="text/css">
  </head>
  <body>
    {{> includes/navigation}}

    <header class="header">
      <h1 class="header__title short-underline short-underline--dark">{{page 'title'}}</h1>
      <ul class="header__message header__links">
        <li class="header__links__item">
          <a href="/" rel="noopener" target="_self">home</a>
        </li>
        <li class="header__links__item">
          <a href="/snippets" rel="noopener" target="_self">snippets</a>
        </li>
        <li class="header__links__item">
          <a href="/downloads/cv_eric-cornelissen.pdf" rel="noopener" target="_blank">resume</a>
        </li>
      </ul>
    </header>

    <main class="main">
      <section id="programming" class="section">
        <h2 class="short-underline">Programming &amp; Web development</h2>
        <ul class="list list--cards">
          {{#each portfolio.programming}}
            {{#if (new_category end_year)}}
              <li class="list-item list-item--newline">
                <p class="list-item__category">{{end_year}}</p>
            {{else}}
              <li class="list-item">
            {{/if}}

              <div class="list-item__header">
                <h3 class="list-item__title">{{name}}</h3>

                <ul class="list-item__links">
                  {{#each links as |url key|}}
                    <li class="list-item__link">
                      <a class="icon icon--hover {{get_icon key}}" aria-label="link to the project's {{get_name key}}" href="{{url}}" rel="noopener" target="_blank"></a>
                    </li>
                  {{/each}}
                </ul>
              </div>

              <p class="list-item__description">{{{truncate (sanitize tldr) 80}}}</p>
              <a class="list-item__more" href="/archive/{{hyphenate (lowercase name)}}" rel="noopener">More</a>
            </li>
          {{/each}}
        </ul>
      </section>

      <section id="contributions" class="section">
        <h2 class="short-underline">Contributions</h2>
        <ul class="list list--cards">
          {{#each portfolio.contributions}}
            {{#if (new_category end_year)}}
              <li class="list-item list-item--newline">
                <p class="list-item__category">{{end_year}}</p>
            {{else}}
              <li class="list-item">
            {{/if}}

              <div class="list-item__header">
                <h3 class="list-item__title">{{name}}</h3>

                <ul class="list-item__links">
                  {{#each links as |url key|}}
                    <li class="list-item__link">
                      <a class="icon icon--hover {{get_icon key}}" aria-label="link to the project's {{get_name key}}" href="{{url}}" rel="noopener" target="_blank"></a>
                    </li>
                  {{/each}}
                </ul>
              </div>

              <p class="list-item__description">{{{ellipsis (sanitize about) 80}}}</p>
              <a class="list-item__more" href="/archive/{{hyphenate (lowercase name)}}" rel="noopener">More</a>
            </li>
          {{/each}}
        </ul>
      </section>

      {{> includes/back-to-top}}
    </main>

    {{> includes/footer}}
  </body>
</html>
