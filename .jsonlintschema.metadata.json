{
  "title": "metadata.json",
  "description": "Metadata for the portfolio",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-z]+$": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "icon": {
          "description": "The name of the icon of the item",
          "required": true,
          "type": "string"
        },
        "name": {
          "description": "The formal name of the item",
          "required": true,
          "type": "string"
        }
      }
    }
  }
}
