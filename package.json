{
  "name": "portfolio-eric-cornelissen",
  "version": "0.0.0",
  "description": "Repository for the personal portfolio of Eric Cornelissen (2017)",
  "license": "Unlicense",
  "author": {
    "name": "Eric Cornelissen",
    "email": "ericornelissen@gmail.com"
  },
  "scripts": {
    "axe": "axe --disable color-contrast localhost:4000 localhost:4000/portfolio",
    "build": "gulp",
    "clean": "gulp clean",
    "lighthouse": "lighthouse http://localhost:4000/ --chrome-flags='--headless' --output-path=lighthouse-report.html --view",
    "lint": "npm run lint-html && npm run lint-json && npm run lint-sass",
    "lint-html": "htmllint _site/**/*.html",
    "lint-json": "jsonlint -q _data/metadata.json && jsonlint -q _data/portfolio.json && jsonlint -q _data/social.json",
    "lint-sass": "sass-lint -v styles/*.scss styles/mixins/*.scss",
    "serve": "gulp serve & npm run start",
    "start": "http-server ./_site -p 4000"
  },
  "devDependencies": {
    "axe-cli": "^1.3.1",
    "gulp": "^3.9.1",
    "gulp-hb": "^7.0.1",
    "gulp-liquidjs": "^1.0.2",
    "gulp-rm": "^1.0.5",
    "gulp-sass": "^4.0.1",
    "gulp-sequence": "^1.0.0",
    "htmllint-cli": "0.0.6",
    "http-server": "^0.11.1",
    "jsonlint": "^1.6.3",
    "lighthouse": "^2.8.0",
    "sass-lint": "^1.12.1"
  }
}
