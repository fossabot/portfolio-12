<header class="header {{#if compact}}header--compact{{/if}}">
  <div class="header__container">
    <a class="header__logo" href="/" rel="noopener">
      <img alt="Personal logo" src="/assets/favicon.svg">
    </a>
    <h1 class="header__title short-underline short-underline--inverse">Eric Cornelissen</h1>
    <p class="header__message">Hey there &#x1F44B; I&apos;m software engineering and open source enthusiast with an interest in security and usability. You can find me and my work right here or at the links below.</p>

    {{#unless no_breadcrumbs}}
      <ol class="breadcrumbs">
        <li class="crumb"><a href="/" rel="noopener">Home</a></li>
        {{#each (get_crumbs)}}
          {{#unless @last}}
            <li class="crumb"><a href="{{path}}" rel="noopener">{{name}}</a></li>
          {{else}}
            <li class="crumb">{{name}}</li>
          {{/unless}}
        {{/each}}
      </ol>
    {{else}}
      <ul class="vlist vlist--evenly-spaced">
        <li><a href="/archive#projects" rel="noopener">Projects</a></li>
        <li><a href="/archive#contributions" rel="noopener">Contributions</a></li>
        <li><a href="/snippets" rel="noopener">Snippets</a></li>
        <li><a href="/downloads/cv_eric-cornelissen.pdf" rel="noopener">Resume</a></li>
        <li><a href="/timeline" rel="noopener">Timeline</a></li>
      </ul>
    {{/unless}}

    <ul class="header__list list-of-icons">
      {{#each social}}
        <li class="list-item">
          <a class="icon icon-{{@key}} icon--hover" aria-label="link to my {{get_name @key}}" href="{{url}}" rel="noopener" target="{{target}}"></a>
        </li>
      {{/each}}
    </ul>
  </div>
</header>
