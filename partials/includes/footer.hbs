<footer class="footer">
  <ul class="footer__social list-of-icons list-of-icons--large">
    {{#each social}}
      <li class="list-item footer__social__link background-hover background-hover--{{lowercase (get_name @key)}}">
        <a class="icon icon-{{@key}} icon--hover" aria-label="link to my {{get_name @key}}" href="{{url}}" rel="noopener" target="{{target}}"></a>
      </li>
    {{/each}}
  </ul>

  <p class="footer__message short-underline short-underline--inverse">Enjoy your day!</p>
</footer>
