{{#with_project "contributions" $page.title}}
{{page "keywords" (lowercase (join project.keywords ','))}}

<!DOCTYPE html>
<html lang="{{site.lang}}">
  <head>
    {{> includes/metadata}}
  </head>
  <body>
    {{> includes/header modifiers="header--compact"}}

    <main class="main">
      <article class="section">
        <ul class="article__links">
          {{#each project.links as |url key|}}
            <li class="links__item">
              <a class="icon icon-{{@key}} icon--hover" aria-label="link to the project's {{get_name key}}" href="{{url}}" rel="noopener" target="_self"></a>
            </li>
          {{/each}}
        </ul>

        <h2 class="short-underline">
          {{project.name}}
          {{#if project.maintainer}}
            <span class="badge">Maintainer</span>
          {{/if}}
        </h2>

        <p class="article__date">
          {{project.start_year}}{{#unlessEq project.start_year project.end_year}} - {{project.end_year}}{{/unlessEq}}
        </p>

        {{#if project.about}}
          <p class="article__about" data-name="about">{{{project.about}}}</p>
        {{/if}}

        <h3 class="short-underline">Description</h3>
        {{#> description}}
          {{!-- Project description is inserted here --}}
        {{/description}}
      </article>

      {{> includes/back-to-top}}
    </main>

    {{> includes/footer}}
  </body>
</html>
{{/with_project}}
