{{#with_project "contributions" $page.title}}
{{page "keywords" (lowercase (join project.keywords ','))}}

<!DOCTYPE html>
<html lang="{{site.lang}}">
  <head>
    {{> includes/metadata}}
  </head>
  <body>
    <header class="header">
      <h1 class="header__title short-underline short-underline--inverse">Eric Cornelissen</h1>
      <p class="header__message">Hey there &#x1F44B; I&apos;m software engineering and open source enthusiast with an interest in security and usability. You can find me and my work right here, or at the links below.</p>

      <ul class="header__list">
        {{#each social}}
          <li class="list-item">
            <a class="icon {{get_icon @key}}" aria-label="link to my {{get_name @key}}" href="{{url}}" rel="noopener" target="{{target}}"></a>
          </li>
        {{/each}}
      </ul>
    </header>

    <main class="main">
      <article class="section">
        <ul class="list list--links list--glyphs">
          {{#each project.links as |url key|}}
            <li class="links__item">
              <a class="icon icon--hover {{get_icon key}}" aria-label="link to the project's {{get_name key}}" href="{{url}}" rel="noopener" target="_self"></a>
            </li>
          {{/each}}
        </ul>

        <h2 class="short-underline">
          {{project.name}}
          {{#if project.maintainer}}
            <span class="badge">Maintainer</span>
          {{/if}}
        </h2>

        {{#if project.about}}
          <p class="article__about" data-name="about">{{{project.about}}}</p>
        {{/if}}

        <h3 class="short-underline">Description</h3>
        {{#> description}}
          {{!-- Project description is inserted here --}}
        {{/description}}
      </article>

      {{> includes/back-to-top}}
    </main>

    {{> includes/footer}}
  </body>
</html>
{{/with_project}}
